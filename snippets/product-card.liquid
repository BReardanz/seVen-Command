<a href="{{ product.url }}" class="card">
  <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
  <h3>{{ product.title }}</h3>
  <p>{{ product.price | money }}</p>
</a>

<style>
.card{background:#111;padding:20px;text-decoration:none;border:1px solid rgba(255,255,255,0.1);}
.card:hover{border-color:var(--accent);box-shadow:0 0 10px var(--accent);}
.card img{width:100%;border-radius:4px;}
.card h3{margin:12px 0 6px;color:var(--text);}
.card p{color:var(--accent);}
</style>
