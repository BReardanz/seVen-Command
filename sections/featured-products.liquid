{% schema %}
{
  "name": "Featured products",
  "settings": [
    { "type": "collection", "id": "collection", "label": "Collection" }
  ]
}
{% endschema %}

{% assign featured = section.settings.collection.products | limit:4 %}
<section class="featured">
  <h2>Featured Gear</h2>
  <div class="grid">
    {% for product in featured %}
      {% render 'product-card', product: product %}
    {% endfor %}
  </div>
</section>

<style>
.featured{padding:60px 5%;text-align:center;}
.featured h2{color:var(--accent);}
.grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(250px,1fr));gap:30px;margin-top:30px;}
</style>
